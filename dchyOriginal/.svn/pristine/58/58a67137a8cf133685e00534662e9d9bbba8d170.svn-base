html,body{
    height: 100%;
    width: 100%;
    color: #333;
    font-size: 14px;
}
/* 头部 */
.header{
    width: 100%;
    height: 60px;
    line-height: 60px;
    background: #1d87d1;
    color: #FFFFFF;
    padding-left: 80px;
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
}
.header h3{
    font-size: 20px;
    font-weight: 400;
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
}
.management-contanier{
    /* height: 100%; */
    padding: 60px 50px 0 50px;
    box-sizing: border-box;
    /* overflow: hidden; */
    position: relative;
}
/* 主轴线 */
.main-axis{
    margin-top: 120px;
}
.main-axis .line{
    height: 4px;
    background: #ccc;
    position: relative;
}
.main-axis .line::before,.main-axis .line::after{
    content: '';
    display: inline-block;
    width: 20px;
    height: 20px;
    background: #1d87d1;
    border-radius: 50%;
    position: absolute;
    top: -10px;
}
.main-axis .line::before{
    background: #1d87d1;
    left: -5px;
}
.main-axis .line::after{
    background: #ccc;
    right: -5px;
}
/* 主体 */
.main-content{
    width: 100%;
    min-height: calc(100% - 90px);
    position: absolute;
    top: 90px;
    left: 0;
    padding: 0 50px 0 200px;
    box-sizing: border-box;
    /* overflow: hidden; */
}
.main-content .stage-item{
    float: left;
    width: 16.6%; 
    height: 100%
}
.main-content .stage-item h4{
    font-size: 18px;
}
.main-content .stage-item .stage-item-content{
    margin-top: 60px;
    min-height: calc(100% - 104px);
    border-left: 3px solid #ccc;
    position: relative;
}
.main-content .stage-item .stage-item-content .big-circle{
    position: absolute;
    top: -25px;
    left: -30px;
    width: 60px;
    height: 60px;
    line-height: 60px;
    border-radius: 50%;
    box-shadow: 0px 0px 5px #666;
    text-align: center;
    font-size: 22px;
}
.main-content .stage-item .stage-item-content ul{
    padding-top: 100px;
    padding-bottom: 10px;
}
.main-content .stage-item .stage-item-content li{
    position: relative;
    padding: 5px 80px 5px 20px;
}
.main-content .stage-item .stage-item-content li .small-circle{
    position: absolute;
    top: 0px;
    left: -12px;
    width: 20px;
    height: 20px;
    line-height: 20px;
    border-radius: 50%;
    box-shadow: 0px 0px 6px #666;
}
.main-content .stage-item .stage-item-content li dd{
    box-sizing: border-box; 
    margin-bottom: 5px;
    font-size: 14px;
    padding: 5px 10px;
} 
.main-content .stage-item .stage-item-content li dd:hover{
   cursor: pointer;
}
.main-content .stage-item .stage-item-content li .after-stage:hover,
.main-content .stage-item .stage-item-content li.active .after-stage{
    background: #acd1f3;
    color: #fff;
}
tr.active{
    background: #acd1f3;
    color: #333;
}
.after-stage{
   background: #1d87d1;
   color: #fff;
}
.before-stage{
   background: #ccc;
   color: #fff;
}
.stage-ing{
   background: #ff9933;
   color: #fff;
}
.before-stage-text{
   background: #ccc;
   color: #666;
}
 .mini-circle{
    position: absolute;
    bottom: 0px;
    left: -6px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    box-shadow: 0px 0px 6px #666;
}
/* 测绘内容表 */
.mapping-content{
    position: absolute;
    left: 50%;
    margin-left: -600px;
}
.bdc-look-btn,
.layui-laypage .layui-laypage-curr .layui-laypage-em{
    background: #1d87d1;
}