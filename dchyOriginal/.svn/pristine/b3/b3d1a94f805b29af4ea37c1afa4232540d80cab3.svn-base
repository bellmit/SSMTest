<div id="J_THUMBNAIL" class="modal fade hide">
    <form class="form-horizontal" method="post" action="ajax/uplNail/" enctype="multipart/form-data">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>上传缩略图</h3>
        </div>
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label">选择图片</label>
                <div class="controls">
                    <input id="img" type="file" name="img"/>
                    <span class="help-inline">仅支持.png和.jpg格式</span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="J_SUBMIT" class="btn btn-primary">上传</button>
        </div>
    </form>
</div>