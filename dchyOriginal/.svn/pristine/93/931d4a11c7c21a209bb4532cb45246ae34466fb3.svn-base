.mlk-container {
    padding: 0px;
    background-color: #fff;
    min-height: calc(100vh - 100px);
    border: 1px solid #d0d5da;
    padding-bottom: 80px;
    margin-top: 0px!important;
    .list-box {
        padding: 0;
        background-color: #EAEDF1;
    }
    .mlk-search {
        display: flex;
        justify-content: space-between;
    }
    .mlk-title {
        padding: 5px 5px 0;
        display: flex;
        justify-content: flex-start;
    }
    .list-title {
        margin-top: 10px;
    }
}
.mlk-items {
    padding: 30px;
    padding-top: 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    .mlk-item {
        width: 49%;
        line-height: 28px;
        height: 200px;
        box-sizing: border-box;
        padding: 0 10px;
        border: 1px solid #ccc;
        display: flex;
        margin-top: 20px;
        justify-content: flex-start;
        position: relative;
        .mlk-detail {
            height: 180px;
        }
        .freeze-item {
            position: absolute;
            padding: 0 5px;
            left: -7px;
            top: -1px;
            z-index: 10;
        }
        .view-item {
            position: absolute;
            top: 5px;
            right: 5px;
            z-index: 10;
        }
        .view-btn:hover {
            background-color: #1d87d1;
            color: #fff;
        }
        .mlk-img {
            height: 100%;
            margin-right: 20px;
            width: 46%;
            img {
                width: 100%;
                height: 180px;
                margin-top: 10px;
            }
        }
        .mlk-name {
            font-size: 16px;
            color: #1d87d1;
            line-height: 36px;
        }
    }
}
.mlk-item:hover {
    box-shadow: 0 0 5px #d0d5da;
}