body,
html {
    font-family: "Microsoft YaHei", Helvetica, Arial, sans-serif !important;
    font-size: 14px;
    width: 100%;
}

html {
    background-color: #FFFFFF;
}

.bdc-contanier {
    position: relative;
    height: 100%;
    box-sizing: border-box;
}

.bdc-contanier iframe {
    border: none !important;
}

.bdc-contanier .layui-tab-content {
    height: 100%;
    padding: 46px 0px 0 20px;
    box-sizing: border-box;
}

.service-header-tab {
    margin: 0;
}

.layui-tab-brief > .layui-tab-title .layui-this {
    color: #1d87d1;
}

.layui-tab-brief > .layui-tab-more li.layui-this:after, .layui-tab-brief > .layui-tab-title .layui-this:after {
    border-bottom: 2px solid #1d87d1;
}

.service-header-tab > .service-header-tab-title {
    width: 100%;
    height: 46px;
    background: #FFFFFF;
    position: fixed;
    top: 0;
    left: 0;
    padding: 0 20px;
    box-sizing: border-box;
}

.service-header-tab > .service-header-tab-title li {
    line-height: 46px;
}

.bdc-contanier .service-header-tab .layui-tab-content .layui-tab-item {
    height: 100%;
    padding: 20px 0;
    box-sizing: border-box;
}

.header-right-btn {
    position: fixed;
    top: 6px;
    right: 20px;
    display: flex;
}


.bdc-save-btn {
    background: #1d87d1;
}


.header-right-btn .bdc-delete-btn:hover,
.header-right-btn .bdc-save-btn:hover {
    color: #FFFFFF;
}

/*主标题*/

.bdc-main-title {
    text-align: center;
    font-size: 16px;
    margin-bottom: 15px;
}


/*标题*/

.bdc-title {
    margin-bottom: 20px;
    font-weight: 400;
}

.bdc-title span::before {
    display: inline-block;
    content: '';
    width: 3px;
    height: 15px;
    background: #1D87D1;
    margin-right: 10px;
}

/*侧边选项卡*/

.bdc-tab-aside .layui-tab-title {
    border: none;
}

.bdc-tab-aside .layui-tab-title li {
    background: #f3f4f6;
    display: block;
    margin-bottom: 10px;
    border: none;
}

.bdc-tab-aside .layui-tab-title .layui-this {
    background: #1D87D1;
    color: #FFFFFF;
}

.bdc-tab-aside {
    position: relative;
    /*	padding: 20px 0;*/
    position: relative;
    height: 100%;
}

.bdc-tab-aside .bdc-aside {
    position: absolute;
    top: 0px;
    left: 0;
    width: 160px;
    height: 100%;
    padding: 0 10px;
    border-right: 1px solid #CCCCCC;
}

.bdc-tab-aside .layui-tab-content {
    padding: 0 0 0 190px;
    height: 100%;
}

.bdc-tab-aside .layui-tab-content .layui-tab-item {
    height: calc(100% - 10px);
    border: 1px solid #CCCCCC;
}

.layui-table-cell, .layui-table-tool-panel li {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/*弹出层*/
.layui-layer-content {
    text-align: center;
}

/* 表格头部按钮区 */
.layui-table-tool {
    height: 50px;
    text-align: right;
}

.layui-table-tool-temp {
    padding: 0px;
}


.layui-form-item .layui-inline {
    margin-bottom: 5px;
    margin-right: 10px;
    width: 32%;
    padding-bottom: 10px;
    white-space: nowrap;
}

.pf-secondary-btn {
    background-color: #f3f4f6;
    color: #666;
    border: 1px solid #d0d5da;
}


.layui-laydate .layui-this {
    background-color: #1d87d2 !important;
    color: #fff !important;
}

.layui-form-checkbox[lay-skin=primary]:hover i {
    border-color: #1d87d2;
    color: #fff;
}

.layui-form-checked[lay-skin=primary] i {
    border-color: #1d87d2;
    background-color: #1d87d2;
    color: #fff;
}

.layui-form-select dl dd.layui-this {
    background-color: #1d87d2;
    color: #fff;
}

.layui-laypage .layui-laypage-curr .layui-laypage-em {
    position: absolute;
    left: -1px;
    top: -1px;
    padding: 1px;
    width: 100%;
    height: 100%;
    background-color: #1d87d2;
}

.pf-secondary-btn:hover {
    color: #666;
}

.layuiFormItem .layui-inline {
    margin-bottom: 5px;
    margin-right: 10px;
    padding-bottom: 10px;
    white-space: nowrap;
}

.cqInput {
    width: 73%;
}

.layui-layer-page .layui-layer-content {
    position: relative;
    overflow: inherit;
}

.layui_show_table {
    margin-left: 30px;
    margin-right: 30px;
}

.layui-input {
    height: 32px;
    width: 100%;
}

#unable, #able, #detail, #edit {
    height: 22px !important;
    line-height: 22px !important;
    background-color: #1d87d2 !important;
    font-size: 14px !important;
}

#search, #add {
    height: 33px;
    line-height: 33px;
    background-color: #1d87d2 !important;
}

#reset {
    height: 33px;
    line-height: 33px;
    background-color: #f3f4f6;
    color: #666;
    border: 1px solid #d0d5da;
}
.layui-btn-normal {
    background-color: #1d87d2;
    line-height: 28px;
}


