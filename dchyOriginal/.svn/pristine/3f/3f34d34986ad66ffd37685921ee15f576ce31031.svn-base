.loc-result-wrapper{
    margin: 10px;
    height: 100%;
}
.loc-result-wrapper fieldset{
    border: none;
    padding: 0;
    border-top: 1px solid #ccc;
}

.loc-result-wrapper fieldset legend{
    width: auto;
    border: none;
    margin-left: 10px;
    margin-bottom: 10px;
    padding: 0 5px;
    font-size: 18px;
    font-weight: 500;
}

.loc-result-list{
    min-height: 150px;
    overflow-y: auto;
    overflow-x: hidden;
}

.loc-func-list li{
    position: relative;
    display: block;
    margin-bottom: -1px;
    background-color: #fff;
    border: 1px solid #dedede;
    padding: 1rem;
}

.loc-func-list abbr[title]{
    color: #0e90d2;
}

.loc-func-list .icheckbox-blue{
    display: inline-block;
}