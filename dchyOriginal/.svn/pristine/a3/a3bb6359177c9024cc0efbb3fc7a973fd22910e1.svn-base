.content-user-header {
    width: 100%;
    height: 370px;
    background: url('~static/images/mine-bg.png') no-repeat;
}
.user-name {
    display: block;
    margin: 0 auto;
    width: 112px;
    text-align: center;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    color: #ddd;
    font-size: 16px;
}
.userName {
    font-size: 32px;
}
.user-name img {
    width: 112px;
    height: 112px;
    border-radius: 100%;
    border: 2px solid #fff;
}