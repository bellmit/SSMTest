    }
}
@media (max-width: 1400px) {
    .process-nav > li {
        margin-right: 188px;
    }
    .process-nav > li:after {
        width: 200px;
        left: -100px;
    }
    .process-nav .step-first {
        margin-right: 100px;
    }
}