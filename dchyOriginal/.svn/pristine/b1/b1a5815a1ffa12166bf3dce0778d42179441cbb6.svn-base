        width: 250px;
        left: -125px;
    }
    .process-nav .step-first {
        margin-right: 125px;
    }
}
@media (max-width: 1440px) {
    .process-nav > li {
        margin-right: 208px;
    }
    .process-nav > li:after {
        width: 220px;
        left: -110px;
    }
    .process-nav .step-first {
